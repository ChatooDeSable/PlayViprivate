.big-text-button
  font-size: 3.6rem
  font-weight: 300
  color: $white
  position: relative

@keyframes rotate
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

.spinner
  width: 7px
  height: 7px
  padding: 4px
  margin-left: auto
  margin-right: 8px
  border: 3px solid $white
  border-radius 50%
  border-right-color: transparent
  box-sizing: content-box
  opacity: 0.5
  animation: rotate 0.6s linear infinite