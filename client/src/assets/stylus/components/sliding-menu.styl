.sliding-menu-container
  position: absolute
  top: -($page-margin)
  left: -($page-margin)
  z-index: 10
  max-width: $screen-tab-menu-width
  width: 100%
  height: 210px
  background-color: $black
  border-right: 20px solid $black
  border-left: 20px solid $black
  border-bottom: 2px solid #1f1f1f
  box-sizing: content-box
  box-shadow: 0 20px 25px 3px #000000b8

  &:after
    position: absolute
    content: ''
    left: -20px
    bottom: -2px
    width: 20px
    height 2px
    background-color: #1f1f1f

  &:before
    position: absolute
    content: ''
    right: -20px
    bottom: -2px
    width: 20px
    height 2px
    background-color: #1f1f1f

  .vertical-wrapper
    display: flex
    flex-direction: column
    justify-content: space-around
    height: 100%
    align-items: flex-start
    padding: $page-margin 0

    .inner-wrapper
      &:nth-of-type(2)
        margin-top: 10px

    .inner-wrapper-bottom
      display: flex
      justify-content: space-between
      width: 100%

    button
      margin-top: auto
      color: $cancel-red

  .header
    font-weight: 500
    color: $white
    font-size: 1.6rem
  .text
    font-weight: 300
    color: $white
    font-size: 1.6rem
    line-height: 30px

  .close-button
    position: absolute
    top: $page-margin + 2px
    right: 0
    display: flex
    margin-left: auto
    img
      width: 14px
      height auto
      padding: 8px 10px
      box-sizing: content-box