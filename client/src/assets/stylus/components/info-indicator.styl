.info-indicator-container
  .attention-indicator
    position: absolute
    display: block
    padding-left: 1px
    color: $black
    text-align: center
    line-height: 16px
    font-size: 12px
    font-weight: bold
    width: 16px
    height: 16px
    background-color: $white
    border-radius: 50%
    z-index: 1

    &:before
      position: absolute
      content: ''
      width: 50px
      height: 50px
      background-color: $white
      border-radius: 50%
      left: -17px
      top: -17px
      z-index: -1
      animation: pulse ease 2s infinite normal

.info-modal-container
  display: flex
  justify-content: center
  width: 100%
  height: 100vh
  position: absolute
  top: 0
  left: 0

  .info-modal
    position: absolute
    top: 80px
    width: 100%
    height: calc(100vh - 110px)
    border-radius: 5px
    background-color: $modal-grey
    padding: 20px
    color: $white
    max-width: 290px
    max-height: 420px

    p
      line-height: 140%
      margin: 20px 0

  .close-button
    position: absolute
    width: 80px
    height: 40px
    background-color: $dark-grey
    border-radius: 5px
    bottom: 20px
    left: calc(50% - 40px)
    font-weight: bold


@keyframes pulse
  0%
    opacity: 0.9
    transform: scale(0.2)
  100%
    opacity: 0
    transform: scale(1)
