.play-list-container
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  color: white
  text-align: center
  max-width: $screen-max-width
  width: 100%
  height: calc(100% - 70px)

  .playlist-name
    flex-direction: column
    align-items: center
    span
      &:nth-of-type(1)
        font-weight: 700
        font-size: 18px
      &:nth-of-type(2)
        color: $purple
        font-size: 24px
        // text-decoration: underline
      &:nth-of-type(3)
        font-size: 16px
        font-weight: 300
        width: 220px

  .playlist-pin
    flex-direction: column
    align-items: center
    margin-top: 50px
    span
      &:nth-of-type(1)
        font-weight: 700
        font-size: 18px
      &:nth-of-type(2)
        color: $purple
        font-size: 48px
        font-weight: 300
      &:nth-of-type(3)
        font-size: 16px
        font-weight: 300
        width: 220px