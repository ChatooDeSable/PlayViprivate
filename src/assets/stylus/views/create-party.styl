.create-party-container
  position: absolute
  top: 0
  left: 0
  background-color: $black
  max-width: $container-max-width
  height: calc(100vh - 100px)
  padding: 0 $page-margin
  padding-top: 30px

  .info-text
    margin-top: 25px
    font-weight: 300
    color: $white
    font-size: 1.4rem
    line-height: 20px

    &:nth-of-type(2)
      color: $green