.sliding-menu-container
  position: absolute
  top: -($page-margin)
  left: -($page-margin)
  z-index: 10
  max-width: $screen-max-width
  width: 100%
  height: 210px
  background-color: $dark-grey
  border-right: 20px solid $dark-grey
  border-left: 20px solid $dark-grey
  box-sizing: content-box
  box-shadow: 0px 4px 12px -1px rgba(0,0,0,0.75)

  .vertical-wrapper
    display: flex
    flex-direction: column
    height: 100%
    align-items: flex-start
    padding: $page-margin 0

    .inner-wrapper
      margin-top: 5px
      &:nth-of-type(2)
        margin-top: 10px

    button
      margin-top: auto
      color: $cancel-red

  .header
    font-weight: 500
    color: $white
    font-size: 1.6rem
  .text
    font-weight: 300
    color: $white
    font-size: 1.6rem
    line-height: 30px

  .close-button
    position: absolute
    top: $page-margin + 2px
    right: 0
    display: flex
    margin-left: auto
    img
      width: 14px
      height auto
      padding: 8px 10px
      box-sizing: content-box