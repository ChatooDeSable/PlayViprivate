.search-bar-container
  position: relative
  width: 100%
  height 40px
  .custom-search-bar
    position: absolute
    left: 0
    top: 0
    height: 100%
    width: 100%
    background-color: black
    border-radius: 5px
    border: 1px $grey solid
    padding-left: 40px
    padding-right: 35px
    font-weight: 300
    font-size: 1.4rem
    color: $white
  .delete-button
    position: absolute
    right: 0px
    width: 14px
    height: 14px
    padding: 13px
    box-sizing: content-box